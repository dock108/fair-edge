# Frontend Environment Configuration
# Copy this file to .env.local and customize for your environment

# =============================================================================
# API Configuration
# =============================================================================

# Backend API URL
VITE_API_URL=http://localhost:8000

# Public URL for the application (used for canonical URLs, redirects, etc.)
VITE_PUBLIC_URL=http://localhost:5173

# =============================================================================
# Environment Settings
# =============================================================================

# Environment mode (development, staging, production)
VITE_APP_ENV=development

# Enable debug mode for development
VITE_DEBUG=true

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/disable specific features
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_REAL_TIME_UPDATES=true
VITE_ENABLE_PUSH_NOTIFICATIONS=false

# =============================================================================
# External Services
# =============================================================================

# Analytics tracking ID (if using Google Analytics, etc.)
VITE_ANALYTICS_ID=

# Stripe public key for payments (if using client-side Stripe)
VITE_STRIPE_PUBLIC_KEY=

# Supabase public configuration (if using client-side Supabase)
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=

# =============================================================================
# Branding and SEO
# =============================================================================

# Application title and description
VITE_APP_TITLE="Fair-Edge - Sports Betting Expected Value Analyzer"
VITE_APP_DESCRIPTION="Discover profitable sports betting opportunities with advanced expected value analysis."

# Social media handles
VITE_TWITTER_HANDLE=@fairedge
VITE_COMPANY_NAME="Fair-Edge"

# =============================================================================
# Development Settings
# =============================================================================

# Mock data mode (for development/testing)
VITE_USE_MOCK_DATA=false

# API timeout settings
VITE_API_TIMEOUT=30000

# Refresh intervals (in milliseconds)
VITE_DATA_REFRESH_INTERVAL=300000
VITE_HEARTBEAT_INTERVAL=60000